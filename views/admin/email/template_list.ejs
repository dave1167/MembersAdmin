<dmx-serverconnect id="scTemplateFields" url="/api/Admin/templates/templateField"></dmx-serverconnect>
<dmx-serverconnect id="scTemplateList" url="/api/Admin/templates/templateList"></dmx-serverconnect>
<div class="modal" id="modTemplateEditor" is="dmx-bs5-modal" tabindex="-1">
    <div class="modal-dialog modal-fullscreen modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h3 class="modal-title">Template Editor</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">

                        <div class="align-self-center col-7">
                            <div class="form-group mb-3">
                                <label for="input2" class="form-label">Template Title</label>
                                <input type="text" class="form-control" id="input2" name="input2" aria-describedby="input2_help" placeholder="Enter some text">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group mb-3 row">

                                <div class="col-sm-10">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" value="" id="input1" name="input1">

                                    </div>
                                </div>
                                <legend class="col-sm-2 col-form-label">Email</legend><label class="form-check-label" for="input1">Document</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group mb-3">
                                <label for="textarea1" class="form-label">Description</label>
                                <textarea id="textarea1" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <textarea id="editor1" name="editor1" is="dmx-summernote" dmx-bind:toolbar="[['style',['style']],['font',['bold','underline','clear']],['fontname',['fontname']],['color',['color']],['para',['ul','ol','paragraph']],['table',['table']],['insert',['link','picture','video']],['view',['help']]]" max-height="600" min-height="400"></textarea>
                        </div>
                        <div class="col-4 border border-1 rounded rounded-3 border-info">
                            <div class="row">
                                <div class="col">
                                    <h5 class="fw-bold">Template Fields</h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th>Field name</th>
                                                </tr>
                                            </thead>
                                            <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="scTemplateFields.data.query" id="tableRepeat2">
                                                <tr>
                                                    <td>
                                                        <button id="btn2" class="btn btn-primary" dmx-on:click="editor1.insertText(fieldName)"><i class="far fa-file-alt fa-2x"></i></button>
                                                    </td>
                                                    <td dmx-text="tmpFieldId" dmx-hide="!tmpFieldId.isEmpty()"></td>
                                                    <td dmx-text="tblName" dmx-on:click="editor1.insertText(fieldName)"></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modCreateTemplate" is="dmx-bs5-modal" tabindex="-1">
    <div class="modal-dialog modal-fullscreen modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h3 class="modal-title">Template Editor</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form id="formCreateTemp" method="post" is="dmx-serverconnect-form" action="/api/Admin/templates/insertNewTemplate">
                        <div class="row">

                            <div class="align-self-center col-7">
                                <div class="form-group mb-3">
                                    <label for="inputTitle" class="form-label">Template Title</label>
                                    <input type="text" class="form-control" id="inputTitle" name="title" aria-describedby="input2_help" placeholder="Enter some text">
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group mb-3 row">

                                    <legend class="col-sm-2 col-form-label">Email</legend>
                                    <div class="col-sm-10">
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" value="1" id="input3" name="inpTempSelect">

                                        </div>
                                    </div>
                                    <label class="form-check-label" for="inputTitle">Document</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group mb-3">
                                    <label for="textarea2" class="form-label">Description</label>
                                    <textarea id="textarea2" class="form-control" name="tempDesc"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">

                                <textarea id="editor2" name="editor2" is="dmx-summernote" dmx-bind:toolbar="[['style',['style']],['font',['bold','underline','clear']],['fontname',['fontname']],['color',['color']],['para',['ul','ol','paragraph']],['table',['table']],['insert',['link','picture','video']],['view',['help']]]" max-height="600" min-height="400"></textarea>
                            </div>
                            <div class="col-4 border border-1 rounded rounded-3 border-info">
                                <div class="row">
                                    <div class="col">
                                        <h5 class="fw-bold">Template Fields</h5>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th></th>
                                                        <th>Field name</th>
                                                    </tr>
                                                </thead>
                                                <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="scTemplateFields.data.query" id="tableRepeat3">
                                                    <tr>
                                                        <td>
                                                            <button id="btn4" class="btn btn-primary" dmx-on:click="editor1.insertText(fieldName)"><i class="far fa-file-alt fa-2x"></i></button>
                                                        </td>
                                                        <td dmx-text="tmpFieldId" dmx-hide="!tmpFieldId.isEmpty()"></td>
                                                        <td dmx-text="tblName" dmx-on:click="editor1.insertText(fieldName)"></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>


                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-success " dmx-on:click="formCreateTemp.submit()">
                    <i class="fas fa-plus-circle iconSpacer fa-lg"></i>Create New Template</button>
            </div>
        </div>
    </div>
</div>
<meta name="ac:route" content="/admin/email/template_list">

<main>
    <div class="container">
        <div class="row">
            <div class="col">
                <button id="btn3" class="btn btn-success align-self-center mt-2 mb-2 ms-2 me-2 pb-2 shadow" dmx-on:click="modCreateTemplate.show()">
                    <i class="fas fa-plus-circle iconSpacer fa-lg"></i>Create New Template</button>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4 class="mt-3">Document Templates</h4>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th dmx-hide="!scTemplateList.data.query[0].templateId.isEmpty()"></th>
                                <th dmx-hide="!scTemplateList.data.query[0].templateId.isEmpty()"></th>
                                <th>Title</th>
                                <th>Description</th>
                                <th dmx-hide="scTemplateList.data.query[0].templateId">Type</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="scTemplateList.data.query" id="tableRepeat1">
                            <tr>
                                <td>
                                    <button id="btn1" class="btn btn-primary" dmx-on:click="modTemplateEditor.show()">
                                        <i class="fas fa-edit fa-lg"></i></button>
                                </td>
                                <td dmx-text="templateId" dmx-hide="!templateId.isEmpty()"></td>
                                <td dmx-text="tempTitle"></td>
                                <td dmx-text="tempDescription"></td>
                                <td dmx-text="templateType" dmx-hide="scTemplateList.data.query[0].templateId"></td>
                                <td>
                                    <p class="text-white bg-body-secondary ps-3" dmx-show="templateType==0">Document Template</p>
                                    <p class="text-light bg-danger ps-3" dmx-show="templateType==1">Email Template</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>