<dmx-serverconnect id="scRegisterUser" url="/api/Admin/security/register" noload="true"></dmx-serverconnect>
<dmx-serverconnect id="scRole" url="/api/Admin/security/role"></dmx-serverconnect>
<div class="container">
</div>
<div class="container shadow border-primary rounded-3">
    <form id="register1" method="post" is="dmx-serverconnect-form" action="/api/Admin/security/register">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-8 col-xl-6 border border-1 border-info rounded-3 shadow mt-3 mb-3">
                <div class="row">
                    <div class="col text-center">
                        <h1>Register A New User</h1>
                        <p class="text-h3">Create a new user to allow them to access the membership system.</p>
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col mt-4">
                        <div class="form-group mb-3"> <label for="input1" class="form-label">First Name</label>
                            <input type="text" id="inp_first_name" name="usrFirstName" class="form-control" required="">
                        </div>



                    </div>
                    <div class="col mt-4">


                        <div class="form-group mb-3"> <label for="input1" class="form-label">Last Name</label><input type="text" id="inp_lastName" name="usrLastName" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row align-items-center mt-4">

                    <div class="col">
                        <div class="form-group mb-3"> <label for="input1" class="form-label">Email</label><input type="email" id="inp_email" name="email" class="form-control">
                        </div>

                    </div>
                    <div class="col">
                        <div class="form-group mb-3"> <label for="input1" class="form-label">Password</label><input type="password" id="inp_password" name="password" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row align-items-center mt-4">
                    <div class="col-2"></div>
                    <div class="col">
                        <div class="form-group mb-3"> <label for="input1" class="form-label">Select Role</label>
                            <select id="select1" class="form-select mt-2" dmx-bind:options="scRole.data.query" optiontext="roleDesc" optionvalue="roleId" name="selectRole">
                            </select>
                        </div>


                    </div>
                    <div class="col-3">
                    </div>
                </div>
                <div class="row justify-content-start mt-4">
                    <div class="col">
                        <button id="register1_submit" class="btn btn-primary w-100 mt-4 mb-2" dmx-on:click="register1.submit()" type="submit">Create New Member</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<meta name="ac:route" content="/admin/userreg">